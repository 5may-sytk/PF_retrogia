<%= stylesheet_link_tag 'searched_styles' %>

<div class="container">
	<div class="row views">

    <div class="col-2 sidebar"> 
      <!-- サイドバー -->  
      <%= render 'public/posts/sidebar' %> 
    </div>

    <div class="col-9 searched-content"> 
      <!-- 検索結果画面 -->
      <h2 class = "title"> Results Search</h2> 
      <div class="row results">
        <table class="table table-hover table-inverse">
          <% if @range == "User" %>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                </tr>
              <% end %>
            </tbody>
          <% else %>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.title %></td>
                </tr>
              <% end %>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>