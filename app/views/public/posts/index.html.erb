<%= stylesheet_link_tag 'index_feed_styles' %>

<div class="container">
	<div class="row">

    <div class="col-2 sidebar"> 
      <!-- サイドバー -->  
      <%= render 'sidebar' %>
    </div>

    <div class="col-9 main-content"> 
    <!--メイン-->
      <div class="posts">
        <table class='table table-hover'>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <% if post.post_image.attached? %>
                    <%= link_to public_post_path(post.id), class: 'side-nav-item' do %>
                      <%= image_tag url_for(post.post_image), size: "250x200" %>
                    <% end %>
                  <% else %>
                    <%= image_tag 'noimage.png', size: "250x200" %>
                  <% end %>
                  <br>
                    <span>
                      <%= post.title %><br>
                      <%= post.user.name %>
                    </span>
                  </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>
</div>
